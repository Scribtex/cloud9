<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:menu id="mnuNew" onitemclick="
        var fs = require('ext/filesystem/filesystem');
        if (event.value == 'folder')
            fs.createFolder();
        else
            fs.createFile('Untitled.' + event.value);
      ">
        <a:item value="folder" icon="folder.png">Folder</a:item>
        <a:divider />
        <a:item value="tex" icon="page_white_tex.png">LaTeX file</a:item>
        <a:item value="bib" icon="book.png">BibTeX file</a:item>
        <a:item value="cls" icon="cls.png">Class file</a:item>
        <a:item value="sty" icon="sty.png">Style File</a:item>
        <a:item value="" icon="page_white_text.png">Text file</a:item>
    </a:menu>
</a:application>